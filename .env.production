# Production Environment Variables for QuickEats

# Next.js Configuration
NEXT_PUBLIC_APP_NAME=QuickEats
NEXT_PUBLIC_APP_URL=https://quickeats.vercel.app

# Database URLs (Set these in Vercel Dashboard)
DATABASE_URL=postgresql://user:password@host:5432/quickeats_db
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/quickeats

# Redis Configuration (Set these in Vercel Dashboard)
REDIS_URL=redis://:password@host:6379

# API Configuration
NEXT_PUBLIC_API_BASE_URL=https://quickeats.vercel.app/api

# Feature Flags
ENABLE_REDIS=true
ENABLE_ANALYTICS=true
ENABLE_SURGE_PRICING=true

# Analytics
NEXT_PUBLIC_ANALYTICS_ID=

# Third-party Services (if needed)
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=

# Session Configuration
SESSION_SECRET=your-session-secret-key-here

# Node Environment
NODE_ENV=production
